<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Light Mode -->
    <style name="Theme.AndroidRockStars" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/androidRockstarsLightPrimary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/androidRockstarsLightPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/androidRockstarsLightSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/androidRockstarsLightGrayStatus</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/androidRockstarsLightBackground</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/androidRockstarsLightBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_animation</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.AndroidRockStars</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/brand_logo_light</item>
    </style>
</resources>