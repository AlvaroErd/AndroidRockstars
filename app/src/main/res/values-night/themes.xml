<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Dark Mode-->
    <style name="Theme.AndroidRockStars" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/androidRockstarsDarkPrimary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/androidRockstarsDarkPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/androidRockstarsDarkSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/androidRockstarsDarkBlueStatus</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/androidRockstarsDarkBackground</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">:
        <item name="windowSplashScreenBackground">@color/androidRockstarsDarkSurface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_animation</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.AndroidRockStars</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/brand_logo_night</item>
    </style>
</resources>