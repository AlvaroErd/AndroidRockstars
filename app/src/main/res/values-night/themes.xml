    <style name="Theme.AndroidRockStars" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/androidRockstarsDarkPrimary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/androidRockstarsDarkPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/androidRockstarsDarkSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/androidRockstarsDarkBlueStatus</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/androidRockstarsDarkBackground</item>
    </style>
